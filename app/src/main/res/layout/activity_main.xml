<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hughandrewarch.weather.MainActivity">


    <TextView
        android:id="@+id/temp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:id="@+id/current_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="40dp"/>

        <TextView
            android:id="@+id/current_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WEATHER"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:layout_toEndOf="@id/current_icon"
            android:layout_above="@+id/current_cond"/>

        <TextView
            android:id="@+id/current_cond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WEATHER"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:layout_toEndOf="@id/current_icon"
            android:layout_above="@+id/current_updated"/>
        <TextView
            android:id="@+id/current_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WEATHER"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:layout_toEndOf="@id/current_icon"
            android:layout_alignBottom="@id/current_icon"/>


    </RelativeLayout>


</LinearLayout>
